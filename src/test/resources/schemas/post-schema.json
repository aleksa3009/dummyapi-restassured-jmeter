{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Post",
  "type": "object",
  "required": ["id", "text", "owner"],
  "properties": {
    "id": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "image": {
      "type": ["string", "null"]
    },
    "likes": {
      "type": "integer"
    },
    "owner": {
      "type": "object",
      "required": ["id", "firstName", "lastName"],
      "properties": {
        "id": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "picture": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
